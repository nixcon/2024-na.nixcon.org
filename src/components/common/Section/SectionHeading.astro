---
const { extraClasses, isEmbedded, id } = Astro.props;

const href = `#${id}`;
---

<h2 {id} class=`${isEmbedded ? "text-2xl font-bold" : "text-3xl font-black"} mb-2 font-overpass ${extraClasses}`>
    { id ? ( <a class="bg-clip-text font-white" {href}>#</a>) : null}
    { id ? (" ") : null}
    <slot />
</h2>
