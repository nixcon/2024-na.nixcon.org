---

import Sponsors from "../common/Sponsors/Sponsors.svelte";
import SubSectionHeading from "../common/Section/SubSectionHeading.astro";
import SectionParagraph from "../common/Section/SectionParagraph.astro";
import SectionHeading from "../common/Section/SectionHeading.astro";
import Section from "../common/Section/Section.astro";
import { getEntry } from "astro:content";
const { data: sponsors } = await getEntry('data', 'sponsors');
---

<Section>
    <SectionHeading id="sponsors">Sponsors</SectionHeading>
    <SectionParagraph>
        Join us as a sponsor!
        See <a href="https://discourse.nixos.org/t/nixcon-north-america-sponsorship-tracks/37755">this post</a> about becoming a sponsor.
    </SectionParagraph>
    <div class="bg-nixblue-200 dark:bg-nixblue-800">
        <SubSectionHeading
                extraClasses="p-4 pb-2 block border-b-4 border-b-blue-200"
        >
            Diamond sponsors
        </SubSectionHeading>
        <ul class="flex flex-rows flex-wrap justify-center gap-x-16 gap-y-8 p-4">
            <Sponsors level="diamond" sponsors={sponsors.diamond} client:load />
        </ul>
    </div>
    <div class="bg-nixblue-200 dark:bg-nixblue-800">
        <SubSectionHeading
                extraClasses="p-4 pb-2 block border-b-4 border-b-yellow-300"
        >
            Gold sponsors
        </SubSectionHeading>
        <ul class="flex flex-rows flex-wrap justify-center gap-x-16 gap-y-8 p-4">
            <Sponsors level="gold" sponsors={sponsors.gold} client:load />
        </ul>
    </div>
    <div class="bg-nixblue-200 dark:bg-nixblue-800">
        <SubSectionHeading
                extraClasses="p-4 pb-2 block border-b-4 border-b-gray-400"
        >
            Silver sponsors
        </SubSectionHeading>
        <ul class="flex flex-rows flex-wrap justify-center gap-x-16 gap-y-8 p-4">
            <Sponsors level="silver" sponsors={sponsors.silver} client:load />
        </ul>
    </div>
    <div class="bg-nixblue-200 dark:bg-nixblue-800">
        <SubSectionHeading
                extraClasses="p-4 pb-2 block border-b-4 border-b-amber-500"
        >
            Bronze sponsors
        </SubSectionHeading>
        <ul class="flex flex-rows flex-wrap justify-center gap-x-16 gap-y-8 p-4">
            <Sponsors level="bronze" sponsors={sponsors.bronze} client:load />
        </ul>
    </div>
</Section>
